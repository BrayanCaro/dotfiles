[alias]
	s = status -s
	l = log --graph
	ll = log --graph --all

[init]
	defaultBranch = main

[pretty]
	slim = "%C(auto)%h %C(#abb2bf)%cr %C(#c6afef)%an%C(auto)%d %s"
[format]
	pretty = slim

[merge]
	tool = vimdiff

[mergeTool]
	keepTemporaries = false
	keepBackup = false
