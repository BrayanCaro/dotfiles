"" Source your .vimrc
source ~/.vimrc

let mapleader=" "

"" -- Suggested options --
" Show a few lines of context around the cursor. Note that this makes the
" text scroll if you mouse-click near the start or end of the window.
set scrolloff=5

" Do incremental searching.
set incsearch
set smartcase
set ignorecase

" Don't use Ex mode, use Q for formatting.
map Q gq

set visualbell
set noerrorbells
set ideajoin

set rnu nu

nmap <leader>f <Action>(GotoFile)
nmap <leader>' <Action>(ReformatCode)
vmap ' <Action>(ReformatCode)
nmap <leader>o <Action>(FileStructurePopup)
nmap <leader>b <Action>(RecentFiles)
nmap <leader>a <Action>(ShowIntentionActions)
nmap <leader>i <Action>(Inline)

nmap <leader>v <Action>(IntroduceVariable)
vmap v <Action>(IntroduceVariable)
nmap <leader>n <Action>(RenameElement)

nmap gr <Action>(ShowUsages)
nmap gy <Action>(GotoTypeDeclaration)
nmap gi <Action>(GotoImplementation)
nmap gs <Action>(GotoSuperMethod)


" Handlers, values:
"   n - normal mode
"   i - insert mode
"   x - visual mode
"   v - visual and select modes
"   a - all modes

sethandler <C-g> n:vim
sethandler <C-n> n:ide
sethandler <C-c> a:ide
sethandler <C-v> a:ide
sethandler <C-w> a:ide
sethandler <C-e> a:ide
sethandler <C-o> n:vim
sethandler <C-i> n:vim
sethandler <C-Enter> a:ide

" Plugins
set NERDTree
